pipeline {
    agent any

    stages {

        stage('Git Clone') {
    steps {
        git branch: 'main',
            credentialsId: 'github-creds',
            url: 'https://github.com/suhas19-Git/simple-app.git'
    }
}


        stage('Docker Build') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t simple-nginx-app .'
            }
        }

        stage('Docker Run') {
            steps {
                echo "Running Docker container..."
                sh '''
                docker rm -f simple-app || true
                docker run -d -p 8080:80 --name simple-app simple-nginx-app
                '''
            }
        }
    }

    post {
        success {
            echo "Pipeline SUCCESS ğŸ‰"
        }
        failure {
            echo "Pipeline FAILED âŒ"
        }
    }
}
